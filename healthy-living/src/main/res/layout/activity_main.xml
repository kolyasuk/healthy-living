<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/lunchView"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:text="@string/lunch_meal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstSnackView"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/_1st_snack"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lunchView" />

    <TextView
        android:id="@+id/dinnerView"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/dinner_meal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstSnackView" />

    <TextView
        android:id="@+id/secondSnackView"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/_2nd_snack"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinnerView" />

    <TextView
        android:id="@+id/supperView"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/supper_meal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondSnackView" />

    <Button
        android:id="@+id/showNextDayMenuButton"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_marginTop="136dp"
        android:text="@string/next_day_menu"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supperView" />

    <Button
        android:id="@+id/showNextDayMenuButton3"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_marginTop="136dp"
        android:text="@string/prev_day_menu"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supperView" />

</androidx.constraintlayout.widget.ConstraintLayout>